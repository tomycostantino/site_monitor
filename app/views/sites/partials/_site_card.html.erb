<div class="card">
  <%= link_to site_path(site), class: "card-link" do %>
    <header class="card-header">
      <h4><%= site.url %></h4>
      <span class="status-badge <%= site.active? ? 'active' : 'inactive' %>">
        <%= site.active? ? 'Active' : 'Inactive' %>
      </span>
    </header>

    <div class="details">
      <div class="detail">
        <span class="detail-label">Frequency:</span>
        <span class="detail-value"><%= site.frequency_seconds %>s</span>
      </div>

      <% if site.monitor_start_time && site.monitor_end_time %>
        <div class="detail">
          <span class="detail-label">Monitor Hours:</span>
          <span class="detail-value">
            <%= site.monitor_start_time.strftime("%H:%M") %> -
            <%= site.monitor_end_time.strftime("%H:%M") %>
          </span>
        </div>
      <% end %>

      <div class="detail">
        <span class="detail-label">Added:</span>
        <span class="detail-value"><%= site.created_at.strftime("%b %d, %Y") %></span>
      </div>
    </div>

    <footer class="card-footer" style="text-align: right;">
      <span class="link">View Details â†’</span>
    </footer>
  <% end %>
</div>