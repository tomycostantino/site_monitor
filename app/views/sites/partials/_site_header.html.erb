<header>
  <%= link_to "← Back to Sites", sites_path, class: "link link-bold" %>

    <div class="page-header">
      <h1><%= site.title %></h1>
    <div class="meta">
      <span class="status-badge <%= site.active? ? 'active' : 'inactive' %>">
        <%= site.active? ? 'Active' : 'Inactive' %>
      </span>
      <span class="text-muted">Added <%= site.created_at.strftime("%B %d, %Y") %></span>
    </div>
  </div>
</header>