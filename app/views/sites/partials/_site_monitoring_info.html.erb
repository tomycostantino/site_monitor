<div class="card">
  <h2 class="card-title">Monitoring Schedule</h2>

  <div class="details">
    <% if site.monitor_start_time && site.monitor_end_time %>
      <div class="detail">
        <span>🕐 Active Hours</span>
        <span>
          <%= site.monitor_start_time.strftime("%H:%M") %> -
          <%= site.monitor_end_time.strftime("%H:%M") %> daily
        </span>
      </div>
    <% else %>
      <div class="detail">
        <span>🔄 Schedule</span>
        <span>24/7 monitoring</span>
      </div>
    <% end %>

    <div class="detail">
      <span>⚡ Check Interval</span>
      <span>
        Every <%= pluralize(site.frequency_seconds, 'second') %>
        <% if site.frequency_seconds < 60 %>
          (high frequency)
        <% elsif site.frequency_seconds < 300 %>
          (standard frequency)
        <% else %>
          (low frequency)
        <% end %>
      </span>
    </div>
  </div>
</div>