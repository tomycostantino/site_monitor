<div class="monitoring-info-card">
  <h2 class="card-title">Monitoring Schedule</h2>

  <div class="monitoring-details">
    <% if site.monitor_start_time && site.monitor_end_time %>
      <div class="schedule-item active-schedule">
        <div class="schedule-icon">üïê</div>
        <div class="schedule-content">
          <h3>Active Hours</h3>
          <p class="schedule-time">
            <%= site.monitor_start_time.strftime("%H:%M") %> -
            <%= site.monitor_end_time.strftime("%H:%M") %>
          </p>
          <p class="schedule-description">
            Monitoring is active during these hours daily
          </p>
        </div>
      </div>
    <% else %>
      <div class="schedule-item">
        <div class="schedule-icon">üîÑ</div>
        <div class="schedule-content">
          <h3>24/7 Monitoring</h3>
          <p class="schedule-description">
            Continuous monitoring with no time restrictions
          </p>
        </div>
      </div>
    <% end %>

    <div class="schedule-item">
      <div class="schedule-icon">‚ö°</div>
      <div class="schedule-content">
        <h3>Check Interval</h3>
        <p class="schedule-time">Every <%= pluralize(site.frequency_seconds, 'second') %></p>
        <p class="schedule-description">
          <% if site.frequency_seconds < 60 %>
            High frequency monitoring
          <% elsif site.frequency_seconds < 300 %>
            Standard monitoring frequency
          <% else %>
            Low frequency monitoring
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>