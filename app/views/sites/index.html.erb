<div class="container">
  <header class="text-center">
    <h1 class="page-title">Site Monitor</h1>
    <p class="text-muted">Snapshot websites automatically</p>
  </header>

  <% if @sites.any? %>
    <div class="grid">
      <% @sites.each do |site| %>
        <%= render 'sites/partials/site_card', site: site %>
      <% end %>
    </div>
    <%= link_to "Add site", new_site_path, class: "btn btn-primary floating-btn" %>
  <% else %>
    <div class="empty-state">
      <%= link_to "Add your first site", new_site_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>