<div class="sites-index">
  <div class="header">
    <h1>Site Monitor</h1>
    <p class="subtitle">Monitor your websites with ease</p>
  </div>

  <div class="sites-grid">
    <% if @sites.any? %>
      <% @sites.each do |site| %>
        <%= render 'sites/partials/site_card', site: site %>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h2>No sites yet</h2>
        <p>Start monitoring by adding your first site.</p>
        <%= link_to "Add Site", new_site_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add New Site", new_site_path, class: "btn btn-primary add-site-btn" if @sites.any? %>
</div>